{
  "name": "claude-terminal",
  "version": "1.0.0",
  "description": "Claude Code専用ターミナル - 改行対応・ログ保存・エイリアス機能付き",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "set NODE_ENV=development && electron .",
    "build": "electron-builder"
  },
  "dependencies": {
    "@xterm/addon-fit": "^0.11.0",
    "@xterm/xterm": "^6.0.0",
    "node-pty": "^1.0.0"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.0.0",
    "electron-reload": "^2.0.0-alpha.1"
  },
  "build": {
    "appId": "com.claude.terminal",
    "productName": "Claude Terminal",
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    },
    "mac": {
      "target": "dmg"
    }
  }
}
